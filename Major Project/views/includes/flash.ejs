<% if(success && success.length!=0){ %>
<div
  class="alert alert-success alert-dismissible fade show col-8 offset-2"
  role="alert"
>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
  <strong><%= success %></strong>
</div>
<% } %>

<% if(error && error.length!=0){ %>
  <div
    class="alert alert-danger alert-dismissible fade show col-8 offset-2"
    role="alert"
  >
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
    <strong><%= error %></strong>
  </div>
  <% } %>
